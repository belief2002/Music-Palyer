<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumDetailsActivity">

    <ImageView
        android:id="@+id/album_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_img" />

    <ImageView
        android:id="@+id/image_view_gradient"
        android:layout_width="match_parent"
        android:src="@drawable/gradient_bg"
        android:layout_height="300dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_album_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/album_photo"/>
</RelativeLayout>